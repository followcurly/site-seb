---
import Layout from "@/layouts/Layout.astro";
import { SITE } from "@/config";
---

<Layout title={`404 Not Found | ${SITE.title}`}>
  <main class="flex-1 flex items-center justify-center min-h-screen bg-[#faf9f7]">
    <div class="text-center p-8">
      <h1 class="typewriter-title text-8xl font-bold text-gray-800 mb-4">404</h1>
      <p class="typewriter-subtitle text-gray-600 mb-2">Page Not Found</p>
      <p class="typewriter-body text-gray-500 mb-8">¯\_(ツ)_/¯</p>
      <a 
        href="/"
        class="typewriter-body text-blue-600 hover:text-blue-800 underline decoration-dashed underline-offset-4 transition-colors duration-200"
      >
        ← Back to Home
      </a>
    </div>
  </main>
</Layout>
